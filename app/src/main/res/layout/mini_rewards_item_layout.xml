<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="10dp"
    android:background="@drawable/border_background"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    >
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/rewards_icon"
        android:src="@drawable/rewards"
        android:layout_margin="8dp"
        android:tint="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rewards_icon"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:id="@+id/couponTitle"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Discount coupon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/couponvalidity"
        android:layout_margin="4dp"
        android:textColor="#3F51B5"
        android:textSize="10sp"
        android:padding="1dp"
        android:textStyle="bold"
        android:text="Validity"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/couponbody"
        android:layout_height="wrap_content"
        android:text="Tap the icon on top right corner to select your coupon."
        android:layout_below="@id/rewards_icon"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:textColor="#ffffff"/>

</RelativeLayout>