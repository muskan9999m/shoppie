<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="60dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Ratings"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_ratings"
        android:id="@+id/ll1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="4.5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/avg_rating"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:id="@+id/avg_rating_star"
            android:src="@drawable/star"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:id="@+id/total_ratings"
        android:text="27 ratings"/>

    <LinearLayout
        android:id="@+id/ratings_progressbar_container"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_ratings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressTint="#00ff00" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressTint="#00ff00" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressTint="#FFEB3B" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressTint="#FFEB3B" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressTint="#FF5722" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ratings_progressbar_container"
        android:layout_below="@id/total_ratings"
        android:layout_marginTop="8dp"
        android:id="@+id/llll"
        android:layout_marginRight="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="5"
                android:id="@+id/tv1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/im1"
                android:layout_gravity="center"
                android:src="@drawable/star"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/tv2"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/im2"
                android:layout_gravity="center"
                android:src="@drawable/star"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="3"
                android:textSize="12sp"
                android:id="@+id/tv3"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/im3"
                android:layout_gravity="center"
                android:src="@drawable/star"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/tv4"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:id="@+id/im4"
                android:src="@drawable/star"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/tv5"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:id="@+id/im5"
                android:src="@drawable/star"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/total_ratings"
        android:layout_marginTop="8dp"
        android:id="@+id/ratings_number_container"
        android:layout_marginLeft="8dp"

        android:layout_toRightOf="@id/ratings_progressbar_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv6"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:id="@+id/tv7"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv8"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:id="@+id/tv9"
            android:text="12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv10"
            android:text="12"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_below="@id/ratings_number_container"
        android:layout_toRightOf="@id/ratings_progressbar_container"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_toRightOf="@id/ratings_progressbar_container"
        android:text="27"
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:textSize="12sp"
        android:id="@+id/total_ratings_figure"
        android:textAlignment="center"
        android:layout_marginStart="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Your ratings"
        android:textSize="12sp"
        android:id="@+id/tv_your_ratings"
        android:textStyle="bold"
        android:layout_below="@id/llll"/>

    <LinearLayout
        android:id="@+id/rate_now_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_your_ratings"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="#BDBABA" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="#BDBABA" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="#BDBABA" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="#BDBABA" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/star"
            android:tint="#BDBABA" />
    </LinearLayout>



</RelativeLayout>