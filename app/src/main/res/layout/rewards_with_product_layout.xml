<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/reward_layout"
    android:elevation="3dp"
    android:background="@drawable/reward_gradient_background"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="6dp"
    >

    <ImageView
        android:id="@+id/reward_icon"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:src="@drawable/rewards"
        android:tint="#ffffff" />

    <TextView
        android:id="@+id/reward_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/reward_icon"
        android:text="title"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/reward_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reward_icon"
        android:layout_marginTop="3dp"
        android:padding="15dp"
        android:text="text this is  some rewards text a lot of text lorem ipsum and whatever...."
        android:textColor="#ffffff" />








</RelativeLayout>
