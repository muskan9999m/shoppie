<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="4dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Shipping Details"
    android:textColor="#000000"
    android:layout_margin="12dp"
    android:id="@+id/tv_shippingDetails"
    android:textStyle="bold"
    android:textSize="21sp"/>

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_shippingDetails"
        android:layout_marginBottom="16dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        android:textSize="16sp"
        android:text="John Deo"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/divider10"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:text="Shipping Adress"
        android:id="@+id/address"
        android:layout_below="@id/divider10"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pincode"
        android:layout_below="@id/address"
        android:text="pincode"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/pincode"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:text="CHANGE OR ADD NEW ADDRESSS"
        android:id="@+id/change_add_address_button"/>

</RelativeLayout>